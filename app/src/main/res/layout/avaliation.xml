<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avaliar despesa"
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comboAvaliacaoDespesa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviarAvaliacao"
        android:layout_below="@+id/comboAvaliacaoDespesa"
        android:layout_alignLeft="@+id/comboAvaliacaoDespesa"
        android:layout_alignStart="@+id/comboAvaliacaoDespesa"
        android:layout_alignRight="@+id/comboAvaliacaoDespesa"
        android:layout_alignEnd="@+id/comboAvaliacaoDespesa" />

</RelativeLayout>